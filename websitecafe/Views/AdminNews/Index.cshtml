
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main>
    <div class="container-fluid px-4">
        <h4 class="mt-1">Danh sách tin tức</h4>

        <div class="card mb-4">
            <div class="card-header">
                @if (ViewBag.Msg != null)
                {
                    if (ViewBag.Msg == "1")
                    {
                        <div class="alert alert-success">
                            <strong>Thành công</strong>
                        </div>
                    }
                    if (ViewBag.Msg == "2")
                    {
                        <div class="alert alert-danger">
                            <strong>Không thể xóa!</strong>
                        </div>
                    }
                }
                <button type="button" class="btn btn-success" data-bs-toggle="modal"
                        data-bs-target="#exampleModalAdd">
                    Thêm mới
                </button>
            </div>

            <div class="card-body">
                <table id="datatablesSimple">
                    <thead style="color:#0d6efd ">
                        <tr style="background-color: darkgrey">
                            <th>STT</th>
                            <th>Tiêu đề</th>
                            <th>Ảnh</th>
                            <th>Nội dung</th>
                            <th>Chủ đề</th>
                            <th>Ngày đăng</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                        </tr>
                    </tfoot>
                    <tbody>
                        @{ var stt = 1;}
                        <input type="hidden" value="@ViewBag.List.Count" id="dodai" />
                        @foreach (var item in ViewBag.List)
                        {
                            var nameModelDes = "exampleModalDes" + item.Id;
                            <tr>
                                <td style="width:10px">@stt</td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    <img style="width: 200px !important;height: 150px !important;" src="~/Content/images/@item.ImageUrl"
                                         class="img-fluid">
                                </td>

                                <td>
                                    <a href="" data-bs-toggle="modal" data-bs-target="#@nameModelDes">Xem</a>
                                </td>
                                <td>
                                    @item.Topic.Name
                                </td>
                                <td>
                                    @item.PublishedDate
                                </td>
                                <td>
                                    @{
                                        var idEx1 = "exampleModalLabel" + item.Id;
                                        var idModelDel = "exampleModalDel" + item.Id;
                                        var edit = "comment" + stt;
                                    }
                                    <button style="width:100px" type="button" class="btn btn-primary" data-bs-toggle="modal"
                                            data-bs-target="#@idEx1">
                                        Sửa
                                    </button>
                                    <button type="button" data-bs-toggle="modal" data-bs-target="#@idModelDel" style="width:100px" class="btn btn-danger"> Xóa</button>
                                </td>
                                <div class="modal fade" id="@idModelDel" tabindex="-1"
                                     aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Bạn chắc chắn muốn xóa ?</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                            </div>

                                            <div class="modal-body">
                                                Tin tức : @item.Title
                                                <form action="/AdminNews/Delete" method="post">
                                                    <input type="hidden" class="form-control" id="id" name="Id" value="@item.Id">
                                                    <div class="modal-footer" style="margin-top: 20px">
                                                        <button style="width:100px" type="button" class="btn btn-secondary"
                                                                data-bs-dismiss="modal">
                                                            Đóng
                                                        </button>
                                                        <button style="width:100px" type="submit" class="btn btn-danger"> Xóa</button>
                                                    </div>
                                                </form>

                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <!-- Modal Update-->
                                <div class="modal fade" id="@idEx1" tabindex="-1"
                                     aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-xl">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Cập nhật</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <form method="POST" action="/AdminNews/Update" class="register-form" id="register-form" enctype="multipart/form-data">
                                                    <input type="hidden" class="form-control" id="id" name="Id" value="@item.Id">
                                                    <div class="col">
                                                        <div class="row">
                                                            <div class="col-12 mb-3">
                                                                <label for="category-film"
                                                                       class="col-form-label">Tiêu đề:</label>
                                                                <input type="text" class="form-control" id="category-film" name="Title" required value="@item.Title">
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-12 mb-3">
                                                                <label for="category-film"
                                                                       class="col-form-label">Chủ đề:</label>
                                                                <select class="form-select" aria-label="Default select example" id="theloai" tabindex="8" name="TopicId" required>
                                                                    <option selected value="@item.Topic.Id">@item.Topic.Name</option>
                                                                    @foreach (var item3 in ViewBag.listCategory)
                                                                    {
                                                                        <option value="@item3.Id">@item3.Name</option>
                                                                    }
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-12 mb-3">
                                                                <label for="category-film"
                                                                       class="col-form-label">Ảnh:</label>
                                                                <input type="file" name="file" class="form-control-file"
                                                                       id="exampleFormControlFile1">
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-12 mb-3">
                                                                <label for="category-film"
                                                                       class="col-form-label">Mô tả ngắn:</label>
                                                                <textarea name="ShortDescription" cols="30" class="form-control"
                                                                          rows="2">@Html.Raw(item.ShortDescription)</textarea>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-12 mb-3">
                                                                <label for="category-film"
                                                                       class="col-form-label">Nội dung:</label>
                                                                <textarea name="Content" id="@edit" cols="30"
                                                                          rows="30">@Html.Raw(item.Content)</textarea>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                                data-bs-dismiss="modal">
                                                            Đóng
                                                        </button>
                                                        <button type="submit" class="btn btn-primary">Lưu</button>
                                                    </div>
                                                </form>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <!-- Modal Descrip-->
                                <div class="modal fade" id="@nameModelDes" tabindex="-1"
                                     aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-xl">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">@item.Title</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <h5>Mô tả ngắn</h5>
                                                @item.ShortDescription
                                                <hr class="my-2">
                                                <h5>Chi tiết</h5>
                                                <p>@Html.Raw(item.Content)</p>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </tr>
                            stt++;
                        }
                        <div class="modal fade" id="exampleModalAdd" tabindex="-1"
                             aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-xl">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Thêm mới</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <form method="POST" action="/AdminNews/Add" class="register-form" id="register-form" enctype="multipart/form-data">
                                            <div class="col">
                                                <div class="row">
                                                    <div class="col-12 mb-3">
                                                        <label for="category-film"
                                                               class="col-form-label">Tiêu đề:</label>
                                                        <input type="text" class="form-control" id="category-film" name="Title" required>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-12 mb-3">
                                                        <label for="category-film"
                                                               class="col-form-label">Chủ đề:</label>
                                                        <select class="form-select" aria-label="Default select example" id="theloai" tabindex="8" name="TopicId" required>
                                                            <option selected value="">Chọn chủ đề</option>
                                                            @foreach (var item3 in ViewBag.listCategory)
                                                            {
                                                                <option value="@item3.Id">@item3.Name</option>
                                                            }
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-12 mb-3">
                                                        <label for="category-film"
                                                               class="col-form-label">Ảnh:</label>
                                                        <input type="file" name="file" class="form-control-file"
                                                               id="exampleFormControlFile1" required>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-12 mb-3">
                                                        <label for="category-film"
                                                               class="col-form-label">Mô tả ngắn:</label>
                                                        <textarea name="ShortDescription" cols="30" class="form-control"
                                                                  rows="2"></textarea>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-12 mb-3">
                                                        <label for="category-film"
                                                               class="col-form-label">Nội dung:</label>
                                                        <textarea name="Content" id="editor" cols="30"
                                                                  rows="30"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                        data-bs-dismiss="modal">
                                                    Đóng
                                                </button>
                                                <button type="submit" class="btn btn-primary">Lưu </button>
                                            </div>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script>

            CKEDITOR.replace("editor");

    </script>
    <script>
            var dodai = document.getElementById("dodai").value;

            for (var i = 1; i <= dodai; i++) {
                var name = "comment" + i
                CKEDITOR.replace(name);
            }
    </script>
</main>

