<style>
    .news-detail {
        max-width: 900px;
        margin: auto;
        padding: 20px;
        background: #fff;
        border-radius: 10px;
    }

    .news-header {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .news-image img {
        width: 300px;
        height: auto;
        border-radius: 10px;
    }

    .news-info {
        flex-grow: 1;
    }

    .news-meta {
        font-size: 14px;
        color: #777;
        margin-top: 5px;
    }

        .news-meta i {
            margin-right: 5px;
        }

    .banner-area {
        background: #6F4E37;
        padding: 40px 0;
        color: white;
        text-align: center;
    }

    .news-content {
        margin-top: 20px;
        padding: 15px;
        background: #f9f9f9;
        border-radius: 10px;
    }
  
</style>

<section class="banner-area">
    <div class="container">

    </div>
</section>

<section class="container news-detail">
    <div class="news-header">
        <div class="news-image">
            <img src="~/Content/img/@Model.ImageUrl" alt="@Model.Title">
        </div>
        <div class="news-info">
            <h2>@Model.Title</h2>
            <p class="news-meta">
                <i class="fa fa-folder"></i> @Model.Topic.Name |
                <i class="fa fa-calendar"></i> @Model.PublishedDate.ToString("dd/MM/yyyy")
            </p>
            <p class="text-muted">@Model.ShortDescription</p>
        </div>
    </div>
    <div class="news-content">
        <p>@Html.Raw(Model.Content)</p>
    </div>
</section>
